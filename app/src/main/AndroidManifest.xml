<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.webwerks.neostore">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signUp.SignUpActivity" />
        <activity
            android:name=".dashboard.DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login.forgotPassword.ForgotPasswordActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".productListing.ProductListingActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            >
        </activity>
        <activity
            android:name=".productDetail.ProductDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".rating.RatingBarActivity"
            android:theme="@style/AppTheme.CustomTheme"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".myAccount.MyAccountActivity"
            android:theme="@style/AppTheme_noActionBar" />
        <activity
            android:name=".resetPassword.ResetPasswordActivity"
            android:theme="@style/AppTheme_noActionBar" />
        <activity
            android:name=".myCart.MyCartActivity"
            android:theme="@style/AppTheme_noActionBar" />
        <activity android:name=".myCart.test_activity" />
        <activity
            android:name=".address.AddAddressActivity"
            android:theme="@style/AppTheme_noActionBar" />
        <activity android:name=".address.AddressListingActivity"
            android:theme="@style/AppTheme_noActionBar"></activity>
    </application>

</manifest>