<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.webwerks.neostore.Dashboard.DashboardActivity"
    tools:showIn="@layout/app_bar_dashboard">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="550px" />

    <LinearLayout
        android:id="@+id/SliderDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="35px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="65px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="35px"
            android:layout_weight="1"
            android:id="@+id/ll_table"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/horizontal_margin_dashboard"
                android:layout_marginTop="50px"

                android:fontFamily="@font/gothammedium"
                android:gravity="right"
                android:text="Tables"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/img_table"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"

                android:layout_marginLeft="@dimen/horizontal_margin_dashboard"
                android:src="@drawable/table" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_sofa"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_sofa"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/horizontal_margin_dashboard"
                android:layout_weight="0.8"
                android:foregroundGravity="left"
                android:src="@drawable/sofa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="18dp"
                android:layout_marginBottom="50px"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/horizontal_margin_dashboard"
                android:layout_weight="0.2"
                android:fontFamily="@font/gothammedium"
                android:gravity="left"
                android:text="@string/sofas"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_weight="1"
        android:id="@+id/ll_chair"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="35px"
            android:layout_weight="1"

            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/gothammedium"
                android:gravity="left"
                android:textSize="18dp"

                android:layout_marginTop="50px"
                android:text="Chairs"
                android:layout_marginLeft="@dimen/horizontal_margin_dashboard"
                android:textColor="@color/colorAccent" />

            <ImageView
                android:id="@+id/img_table"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/horizontal_margin_dashboard"
                android:layout_marginTop="5dp"
                android:src="@drawable/chair" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_cupboard"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_table"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/horizontal_margin_dashboard"
                android:layout_weight="0.8"
                android:src="@drawable/cupboards" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:fontFamily="@font/gothammedium"
                android:gravity="left"
                android:textSize="18dp"

                android:text="@string/Cupboards"
                android:layout_marginBottom="50px"

                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
